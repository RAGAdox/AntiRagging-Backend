<div class="btn-group" role="group" aria-label="Basic example">
    <a href="/complaints"><button type="button" class="btn btn-secondary">Go To Dashboard</button></a>
    <a href="/logout"><button type="button" class="btn btn-secondary" onclick="this.form.submit()">Logout</button></a>

</div>
<hr>
<form action="/signup" method="POST" onsubmit="return submitOnClick()">
    <p><label for="username">Username :-</label><input type="text" placeholder="Username" name="username" id='username'
            class="form-control" required></p>
    <p><label for="email">Email Address :-</label><input type="text" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
            placeholder="Email Id" name="email" id='email' class="form-control" required></p>
    <!--p><input type="password" placeholder="Password" name="password" id='password' class="form-control"></p-->
    <p><label for="name">Full Name :-</label><input type="text" placeholder="Full Name" name="name" id='name'
            class="form-control" required></p>

    <p>Staff Status:<input type="checkbox" name="staffStatus" value="true" class='status' onchange="this.form.submit()"
            checked disabled class="form-control"></p>

    <button class="btn btn-primary btn-block">Sign Up</button>
</form>
<p id='message'></p>
{{#if message}}
<p>{{message}}</p>
{{/if}}
<script>
    console.log('script')
    function submitOnClick() {
        console.log('called from function')
        if (document.getElementById('username').value != '' && document.getElementById('email').value != '' && document.getElementById('name').value != '' /*&& document.getElementById('collegeName').value != '' && document.getElementById('presentAddress').value != '' && document.getElementById('phoneNumber').value != ''*/) {
            console.log('validated')
            return true;
        }
        //event.form.submit()
        else {

            document.getElementById('message').innerHTML = 'Must Complete All The Fields'
            return false;
        }
    }
</script>